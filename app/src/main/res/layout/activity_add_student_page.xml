<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        tools:context=".StudentDetailsPage"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/et_v_add_lname"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="142dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/et_v_add_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:text="Username:"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="9dp"
            android:text="First Name:"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_fname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_v_add_username" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:text="Last Name:"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_v_add_lname"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_lname"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="37dp"
            android:text="Age:"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_v_add_age"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_age"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="45dp"
            android:text="GPA:"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_v_add_gpa"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_gpa"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="Major:"
            app:layout_constraintBaseline_toBaselineOf="@+id/sp_v_add_major"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="37dp"
            android:text="Email:"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_v_add_email"
            app:layout_constraintEnd_toStartOf="@+id/et_v_add_email"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_v_add_fname"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="62dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/et_v_add_lname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <EditText
            android:id="@+id/et_v_add_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/et_v_add_fname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_v_add_age"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="282dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_v_add_gpa"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="52dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <EditText
            android:id="@+id/et_v_add_email"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="137dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@+id/et_v_add_gpa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/et_v_add_fname" />

        <Button
            android:id="@+id/btn_v_add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="25dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_v_add_addStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="30dp"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/sp_v_add_major"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="129dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_v_add_error_usernameExists"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <TextView
            android:id="@+id/tv_v_add_error_fillAllFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="18dp"
            android:text="ERROR: Please fill all fields"
            android:textColor="#E70303"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tv_v_add_error_usernameExists"
            app:layout_constraintStart_toStartOf="@+id/tv_v_add_error_usernameExists" />

        <TextView
            android:id="@+id/tv_v_add_error_usernameExists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="146dp"
            android:text="ERROR: Username already exists"
            android:textColor="#FB0303"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>